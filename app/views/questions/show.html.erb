<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", test_questions_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_test_question_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", test_question_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">      
        <p>
          <b><%= t("activerecord.attributes.question.quest_text", :default => t("activerecord.labels.quest_text", :default => "Quest text")) %>:</b>
          <%= @question.quest_text %>
        </p>
      <div class="wat-cf">
      	<%= link_to "Edit", edit_test_question_path(@test, @question), :class => "button" %> 
        <%= link_to "Delete", test_question_path(@test, @question), :method => "delete", :class => "button", :confirm => "Are you sure?" %>
      </div> 
	  <h3>Answers</h3>
	  <% @question.answers.each do |answer| %>	
	  	<ul>
	  		<li><%= answer.body %></li>
	  	</ul>		 
      <% end %>	  
	  <h3>New answer</h3>
	    <% form_for @answer, :url => test_question_answers_path(@test, @question) do |f| %>
		  	<%= f.text_field :body %>			
			<%= f.check_box :is_right %>
			<%= f.hidden_field :question_id %>			
			<%= submit_tag "Save" %>
		  <% end %>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') -%>